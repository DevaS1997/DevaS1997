<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/assets/images/logo/logo.png" />
    <title>@ViewBag.Title - UD</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow sticky-top">
        <div class="container-fluid px-lg-5">
            <a href="@Url.Action("index", "home")" class="navbar-brand">
                <img src="~/assets/images/logo/logo.png" width="100%" height="50" alt="logo" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item mx-1">
                        <a class="nav-link text-dark fs-6 text-uppercase fw-bold" href="@Url.Action("about", "home")">About</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link text-dark fs-6 text-uppercase fw-bold" href="@Url.Action("services", "home")">Services</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link text-dark fs-6 text-uppercase fw-bold" href="@Url.Action("blog", "home")">Blog</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link text-dark fs-6 text-uppercase fw-bold" href="@Url.Action("contact", "home")">Contact</a>
                    </li>
                    @{
                        if (@Session["role"] != null)
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                    <div class="position-relative d-inline-block avatar-xs">
                                        @{
                                            if (@Session["image"] != null)
                                            {
                                                <img class="avatar-img rounded-circle card-img p-1" src="~/assets/images/userImage/@Session["image"].ToString()" width="40" height="40" alt="">
                                            }
                                            else
                                            {
                                                <img class="avatar-img rounded-circle card-img p-1 border" src="~/assets/images/avatars/team4.jpg" width="50" height="40" />
                                            }
                                        }
                                    </div>
                                </a>
                                <ul class="dropdown-menu rounded-0 p-0 dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item border-bottom py-2" href="@Url.Action("Index","Profile")"><i class="bi bi-person-fill me-2"></i> My Profile</a></li>
                                    <li><a class="dropdown-item border-bottom py-2" href="#"><i class="bi bi-info-circle-fill me-2"></i>FAQs</a></li>
                                    <li><a class="dropdown-item border-bottom py-2" href="#"><i class="bi bi-files-alt me-2"></i>Privacy Policy</a></li>
                                    <li><a class="dropdown-item py-2" href="@Url.Action("Index","Home")"><i class="bi bi-gear-wide-connected me-2"></i>Settings</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mx-1">
                                <a class="bg-primary px-2 py-1 text-white rounded-circle" href="@Url.Action("Login","Login")"><i class="bi bi-door-open"></i></a>
                            </li>
                        }
                    }

                </ul>
            </div>
        </div>
    </nav>
    @*<div class="container mt-2">*@
    @RenderBody()
    @*</div>*@
    <div class="bg-primary">
        <div class="container">
            <!-- row -->
            <div class="row align-items-center g-0">
                <div class="col-xl-6 col-lg-6 col-md-12">
                    <!-- heading -->
                    <div class="pt-5 py-lg-4">
                        <h3 class="text-white display-6 fw-bold mb-0">Subscribe With Us</h3>
                        <p class="text-white fs-5 small">get latest things</p>
                    </div>
                </div>
                <!-- img -->
                <div class=" col-xl-6 col-lg-6 col-md-12 text-lg-end text-center pt-6">
                    <form id="newsletter-form" class="">
                        <div class="input-group mb-3">
                            <input type="email" placeholder="Your Email Address" aria-label="Your Email Address" class="border-end-0 form-control-lg form-control">
                            <button type="submit" class="btn-light border-start-0 btn"><i class="bi bi-cursor-fill fs-4"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <footer class="">
        <div class="py-5 bg-light text-muted">
            <div class="container">
                <div class="row">
                    <div class="mb-2 mb-lg-0 col-lg-4">
                        <div class="fw-bold text-uppercase text-dark mb-3">Social Links</div>
                        <p class="">Lorem ipsum dolor sit amet, consectetur adipisicing.</p>
                        <ul class="list-unstyled p-0">
                            <li class="list-inline-item"><a href="#" target="_blank" title="twitter" class="text-decoration-none text-muted text-hover-primary"><i class="bi bi-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="#" target="_blank" title="facebook" class="text-decoration-none text-muted text-hover-primary"><i class="bi bi-facebook"></i></a></li>
                            <li class="list-inline-item"><a href="#" target="_blank" title="instagram" class="text-decoration-none text-muted text-hover-primary"><i class="bi bi-instagram"></i></a></li>
                        </ul>
                    </div>
                    <div class="mb-2 mb-lg-0 col-md-6 col-lg-2">
                        <div class="fw-bold text-uppercase text-dark mb-3">Links</div>
                        <ul class="list-unstyled p-0">
                            <li><a class="text-muted text-decoration-none" href="/">Blog</a></li>
                            <li><a class="text-muted text-decoration-none" href="/category-rooms">Contact</a></li>
                            <li><a class="text-muted text-decoration-none" href="/category-2-rooms">Services</a></li>
                        </ul>
                    </div>
                    <div class="mb-2 mb-lg-0 col-md-6 col-lg-2">
                        <div class="fw-bold text-uppercase text-dark mb-3">Pages</div>
                        <ul class="list-unstyled p-0">
                            <li><a class="text-muted text-decoration-none" href="/compare">Comparison</a></li>
                            <li><a class="text-muted text-decoration-none" href="/team">Team</a></li>
                            <li><a class="text-muted text-decoration-none" href="/contact">Contact</a></li>
                        </ul>
                    </div>
                    <div class="mb-2 mb-lg-0 col-lg-4">
                        <div class="fw-bold text-uppercase text-dark mb-3">Address</div>
                        <p class="mb-3">Lorem ipsum dolor sit amet, consectetur adipisicing elit. At itaque temporibus.</p>
